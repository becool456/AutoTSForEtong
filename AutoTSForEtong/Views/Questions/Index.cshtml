<script type="text/javascript">
    $(function () {
        $("#search").bind("click", function (event) {
            var knowledgesite = $("#KnowledgeSiteID").val(); //获取知识点
            if (knowledgesite == "请选择知识点") {
                $("#errormessage").html("<p>知识点条件尚未选择</p>");
                //event.preventDefault(); //阻止默认行为
                return false;
            }
        })
    })
</script>